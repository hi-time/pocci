
LOG_CONFIG_FILE=${CONFIG_DIR}/fluent.conf
LOG_CONFIG_TEMPLATE=${TEMPLATE_DIR}/services/core/logging

for i in ${INTERNAL_SERVICES}; do
    if [ -f ${LOG_CONFIG_TEMPLATE}/$i.source.template ]; then
        source ${LOG_CONFIG_TEMPLATE}/$i.source.template >>${LOG_CONFIG_FILE}
    fi
done

if [ ! -d ${POCCI_LOG_DIR} ]; then
    mkdir ${POCCI_LOG_DIR}
fi
