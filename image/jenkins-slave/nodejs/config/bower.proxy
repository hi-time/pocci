if [ -n "${http_proxy}" -a ! -f ~/.bowerrc ]; then
    echo "{" >~/.bowerrc
    echo "\"strict-ssl\": false," >>~/.bowerrc
    echo "\"proxy\": \"${http_proxy}\"" >>~/.bowerrc

    if [ -n "${https_proxy}" ]; then
      echo "\"https-proxy\": \"${https_proxy}\"" >>~/.bowerrc
    fi

    echo "}" >>~/.bowerrc
fi
