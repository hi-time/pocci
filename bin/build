#!/bin/bash
set -eu

BASE_DIR=$(cd $(dirname $0)/..; pwd)
BIN_DIR=${BASE_DIR}/bin
JS_DIR=${BIN_DIR}/js

cd ${BIN_DIR}
chmod +x *
./create-proxy-env

cd ${JS_DIR}
docker run --name poccir_build_1 --env-file=../proxy.env -w /app -v `pwd`:/app --rm -it ototadana/jenkins-slave-nodejs npm install --no-bin-links
docker run --name poccir_build_2 --env-file=../proxy.env -w /app -v `pwd`:/app --rm -it ototadana/jenkins-slave-nodejs /app/node_modules/selenium-standalone/bin/selenium-standalone install
