#!/bin/bash
set -e

BASE_DIR=$(cd $(dirname $0)/..; pwd)
source ${BASE_DIR}/bin/lib/init-env

${LIB_DIR}/stop-document-server

SECONDS=0
echo "Start services..."
source ${LIB_DIR}/force-recreate
${LIB_DIR}/docker-compose backend-services.yml -p ${POCCI_BACKEND_SERVICE_PREFIX} up -d ${FORCE_RECREATE}
${LIB_DIR}/docker-compose core-services.yml -p ${POCCI_SERVICE_PREFIX} up -d ${FORCE_RECREATE}
echo "#__ up-service(1): ${SECONDS}"

SECONDS=0
source ${LIB_DIR}/export-env ${CONFIG_DIR}/.env
${LIB_DIR}/waitfor ${INTERNAL_SERVICE_URL}
echo "#__ up-service(2): ${SECONDS}"

SECONDS=0
${BIN_DIR}/open-workspace
echo "#__ up-service(3): ${SECONDS}"
