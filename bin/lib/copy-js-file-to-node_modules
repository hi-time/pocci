NODE_MODULES=${JS_DIR}/node_modules/pocci

if [ -d ${NODE_MODULES} ]; then
    rm -fr ${NODE_MODULES}
fi
mkdir ${NODE_MODULES}

cp ${JS_DIR}/lib/* ${NODE_MODULES}
for i in $(find ${TEMPLATE_DIR}/services/ -name js); do
    cp $i/* ${NODE_MODULES}
done

grep WORKSPACE ${LIB_DIR}/version |cut -d _ -f 3 |awk -F '=' 'BEGIN{printf "{"}NR!=1{printf ","}{printf "\"%s\":\"%s\"",tolower($1),$2}END{print "}"}' >${NODE_MODULES}/workspaces-version.json
