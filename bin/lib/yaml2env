#!/bin/bash
set -e

BASE_DIR=$(cd $(dirname $0)/../..; pwd)
source ${BASE_DIR}/bin/lib/init-env

cd ${BASE_DIR}

set +e
POCCIR_OPTS=" " ${BIN_DIR}/oneoff iojs iojs -e "require('./bin/js/lib/yaml2env.js')('config/setup.yml')" >${RUNTIME_DIR}/.env
RC=$?

set -e
if [ $RC -ne 0 ]; then
    cat ${RUNTIME_DIR}/.env
    exit ${RC}
fi

if [ -f ${BIN_DIR}/proxy.env ]; then
    cat ${BIN_DIR}/proxy.env >>${RUNTIME_DIR}/.env
fi
