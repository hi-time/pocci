
assert()
{
    if [ ! -d $1 ]; then
        echo "Not Found : $1"
        exit 1
    fi
}

BIN_DIR=${BASE_DIR}/bin
LIB_DIR=${BIN_DIR}/lib
JS_DIR=${BIN_DIR}/js
TEMP_CONFIG_DIR=${JS_DIR}/config
TEMPLATE_DIR=${BASE_DIR}/template
CONFIG_DIR=${BASE_DIR}/config

if [ -z "${COMPOSE_HTTP_TIMEOUT}" ]; then
    export COMPOSE_HTTP_TIMEOUT=240
fi

if [ -z "${POCCI_SERVICE_PREFIX}" ]; then
    export POCCI_SERVICE_PREFIX="poccis"
fi

export JENKINS_CONTAINER=${POCCI_SERVICE_PREFIX}_jenkins_1
export DNS_CONTAINER=${POCCI_SERVICE_PREFIX}_dns_1

assert ${BASE_DIR}
assert ${BIN_DIR}
assert ${LIB_DIR}
assert ${JS_DIR}
assert ${TEMPLATE_DIR}

source ${LIB_DIR}/version
NODEJS_IMAGE=xpfriend/jenkins-slave-nodejs:${VERSION_JENKINS_SLAVE_NODEJS}
