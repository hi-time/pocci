#!/bin/bash
set -eu

BASE_DIR=$(cd $(dirname $0)/..; pwd)
. ${BASE_DIR}/bin/init-env

echo "STEP 1: Apply user settings."
${BIN_DIR}/setup

echo "STEP 2: Start Jenkins slaves."
cp ${TEMP_CONFIG_DIR}/*.env ${CONFIG_DIR}
${BIN_DIR}/docker-service -f jenkins-slaves.yml up -d
${BIN_DIR}/save-config "create *.env file of jenkins slaves"

echo "Done."
