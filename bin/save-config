#!/bin/bash
set -e

if [ -n "$1" ]; then
    COMMIT_COMMENT=$1
else
    COMMIT_COMMENT="commit commit"
fi

BASE_DIR=$(cd $(dirname $0)/..; pwd)
source ${BASE_DIR}/bin/init-env

cd ${CONFIG_DIR}

if [ ! -d ${CONFIG_DIR}/.git ]; then
    git init
fi

if [ `git status --porcelain |wc -l` -gt 0 ]; then
    git add --all
    git commit -m "${COMMIT_COMMENT}"
fi
