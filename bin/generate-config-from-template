#!/bin/bash
set -e

BASE_DIR=$(cd $(dirname $0)/..; pwd)
CONFIG_DIR=${BASE_DIR}/config

if [ -d ${CONFIG_DIR} ]; then
    if [ `ls ${CONFIG_DIR} | wc -l` != "0" ]; then
        rm -r ${CONFIG_DIR}/*
    fi
else
    mkdir ${CONFIG_DIR}
fi

cp -r ${BASE_DIR}/template/* ${CONFIG_DIR}

${BASE_DIR}/bin/generate-docker-compose-yml-from-template ${CONFIG_DIR}
rm ${CONFIG_DIR}/*.yml.template
${BASE_DIR}/bin/save-config "Create from template"
