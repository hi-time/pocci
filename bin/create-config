#!/bin/bash
set -e

BASE_DIR=$(cd $(dirname $0)/..; pwd)
source ${BASE_DIR}/bin/lib/init-env

echo ""
echo "*** STEP 1 ***"
${BIN_DIR}/destroy-service

echo ""
echo "*** STEP 2 ***"
${LIB_DIR}/init-config $1

echo ""
echo "*** STEP 3 ***"
${BIN_DIR}/up-service

echo ""
echo "*** STEP 4 ***"
${LIB_DIR}/update-jenkins-plugins

echo ""
echo "*** STEP 5 ***"
${LIB_DIR}/setup

echo ""
echo "*** STEP 6 ***"
${BIN_DIR}/stop-service
${LIB_DIR}/start-document-server

echo ""
echo "*** Done. ***"
